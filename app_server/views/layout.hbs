<!DOCTYPE html>
<html>
  <head>
  	<meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <title>{{title}}</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <link rel='stylesheet' href='/vendors/semantic-ui/semantic.min.css' />
    <link rel='stylesheet' href='/stylesheets/universal.css' />
    {{#each styles}}
        <link rel="stylesheet" href="/stylesheets/{{this}}" />
    {{/each}}
  </head>
  <body>
    <div class="ui inverted red menu" id="mainMenu">
      <div class="ui container">
        <div class="active item">
          <img src="/images/logo/icon_64.png">
          &nbsp;<b> &nbsp; Literate</b>
        </div>
        <div class="right menu">
          <div class="item">
            <i class="plus icon"></i>
            Create
          </div>
          <div class="item">
            <i class="book icon"></i>
            Classes
          </div>
          <div class="ui icon dropdown item" id="settingsDropdown">
            &nbsp; Settings &nbsp;
            <i class="caret down icon"></i>
            <div class="menu">
              <div class="header">
                Data
              </div>
              <div class="item">
                <i class="upload icon"></i>
                Import
              </div>
              <div class="item">
                <i class="download icon"></i>
                Export
              </div>
              <div class="divider"></div>
              <div class="header">
                Preferences
              </div>
              <div class="item">
                <i class="graduation cap icon"></i>
                Change School Type
              </div>
              <div class="item">
                <i class="font icon"></i>
                Change Name
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{{body}}}
    <script src="/vendors/jquery/jquery-3.3.1.min.js"></script>
    <script src="/vendors/semantic-ui/semantic.min.js"></script>
    <script src="/javascripts/universal.js"></script>
    {{#each scripts}}
    	<script src="/javascripts/{{this}}"></script>
    {{/each}}
  </body>
</html>
