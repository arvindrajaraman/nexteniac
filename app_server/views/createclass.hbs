<div class="ui container" ng-app="nexteniac-createclass" ng-controller="MainController">
	<br>
	<div class="ui form">
		<div class="ui stacked segments">
			<div class="ui center aligned segment">
				<h2>Add Current Classes<div class="ui circular icon right floated teal button" style="position: relative; bottom: 3px;" ng-click="addCurrentClass()"><i class="plus icon"></i></div></h2>
			</div>
			<div class="ui segment" ng-repeat="newclass in newclasses" ng-show="newclass.isfullfeaturedclass">
				<div class="fields">
		            <div class="three wide field">
		              <label>Class Name</label>
		              <input type="text" placeholder="Class Name" ng-model="newclass.name">
		            </div>
		            <div class="two wide field">
		              <label>Credits</label>
		              <select class="ui fluid noninit dropdown" ng-model="newclass.credits">
		                <option value="1.25">1.25</option>
		                <option value="2.50">2.50</option>
		                <option value="3.75">3.75</option>
		                <option value="5">5.00</option>
		                <option value="6">6.00</option>
		                <option value="7">7.00</option>
		                <option value="10">10.00</option>
		              </select>
		            </div>
		            <div class="two wide field">
		              <label>Grade</label>
		              <select class="ui fluid noninit dropdown" ng-model="newclass.grade">
		                <option value="9">Grade 9</option>
		                <option value="10">Grade 10</option>
		                <option value="11">Grade 11</option>
		                <option value="12">Grade 12</option>
		              </select>
		            </div>
		            <div class="two wide field">
		              <label>Level</label>
		              <select class="ui fluid noninit dropdown" ng-model="newclass.type">
		                <option value="0">Honors</option>
		                <option value="1">Accelerated</option>
		                <option value="2">Level 2</option>
		              </select>
		            </div>
		            <div class="three wide field">
		              <label>Subject</label>
		              <select class="ui fluid noninit dropdown" ng-model="newclass.subject">
		                <option value="English">English</option>
		                <option value="Mathematics">Mathematics</option>
		                <option value="Science">Science</option>
		                <option value="History">History</option>
		                <option value="World Language">World Language</option>
		                <option value="Elective">Elective</option>
		                <option value="Physical Education">Physical Education</option>
		                <option value="Health">Health</option>
		                <option value="Other">Other</option>
		              </select>
		            </div>
		            <div class="three wide field">
		              <label>Active MPs</label>
		              <select class="ui fluid noninit dropdown" ng-model="newclass.activemps">
		                <option value="1234">All MPs</option>
		                <option value="234">All MPs except MP1</option>
		                <option value="134">All MPs except MP2</option>
		                <option value="124">All MPs except MP3</option>
		                <option value="123">All MPs except MP4</option>
		                <option value="12">MP1 and MP2</option>
		                <option value="34">MP3 and MP4</option>
		                <option value="1">Only MP1</option>
		                <option value="2">Only MP2</option>
		                <option value="3">Only MP3</option>
		                <option value="4">Only MP4</option>
		              </select>
		            </div>
		            <div class="one wide field">
		              <label style="visibility: hidden;">Delete</label>
		              <div class="ui fluid red inverted icon button" ng-click="deleteClass($index)"><i class="trash icon"></i></div>
		            </div>
	      		</div>
	      		<div>
	      			<b style="line-height: 2;">Grade Categories <i class="add icon" ng-click="addCategory($index)"></i></b>
	      			<div class="fields" ng-repeat="newcategory in newclass.categories" style="width: 500px !important;">
	      				<div class="six wide field">
	      					<select ng-model="newcategory.name">
								<option value="Homework">Homework</option>
								<option value="Classwork">Classwork</option>
								<option value="Classwork & Homework">Classwork & Homework</option>
								<option value="Labs">Labs</option>
								<option value="Tests">Tests</option>
								<option value="Quizzes">Quizzes</option>
								<option value="Projects">Projects</option>
								<option value="Major Assignments">Major Assignments</option>
								<option value="Quarterly">Quarterly</option>
								<option value="Assessments">Assessments</option>
								<option value="Interpretives">Interpretives</option>
								<option value="Interpersonals">Interpersonals</option>
								<option value="Presentationals">Presentationals</option>
								<option value="Participation">Participation</option>
								<option value="Performance">Performance</option>
								<option value="Preparation">Preparation</option>
								<option value="Programs">Programs</option>
							</select>
      					</div>
      					<div class="six wide field">
	      					<input type="number" placeholder="Category Weight" ng-model="newcategory.weight" min="0" max="100">
      					</div>
      					<div class="two wide field">
			              	<div class="ui fluid red inverted icon button" ng-class="{'disabled': newclass.categories.length === 1}" ng-click="deleteCategory($parent.$index, $index)"><i class="trash icon"></i></div>
			            </div>
      				</div>
      			</div>
			</div>
		</div>
		<div class="ui stacked segments">
			<div class="ui center aligned segment">
				<h2>Add Past Classes<div class="ui circular icon right floated teal button" style="position: relative; bottom: 3px;" ng-click="addPastClass()"><i class="plus icon"></i></div></h2>
			</div>
			<div class="ui segment" ng-repeat="newclass in newclasses" ng-hide="newclass.isfullfeaturedclass">
				<div class="fields">
		            <div class="three wide field">
		              <label>Class Name</label>
		              <input type="text" placeholder="Class Name" ng-model="newclass.name">
		            </div>
		            <div class="two wide field">
		              <label>Credits</label>
		              <select class="ui fluid noninit dropdown" ng-model="newclass.credits">
		                <option value="1.25">1.25</option>
		                <option value="2.50">2.50</option>
		                <option value="3.75">3.75</option>
		                <option value="5">5.00</option>
		                <option value="6">6.00</option>
		                <option value="7">7.00</option>
		                <option value="10">10.00</option>
		              </select>
		            </div>
		            <div class="two wide field">
		              <label>Grade</label>
		              <select class="ui fluid noninit dropdown" ng-model="newclass.grade">
		                <option value="9">Grade 9</option>
		                <option value="10">Grade 10</option>
		                <option value="11">Grade 11</option>
		                <option value="12">Grade 12</option>
		              </select>
		            </div>
		            <div class="two wide field">
		              <label>Level</label>
		              <select class="ui fluid noninit dropdown" ng-model="newclass.type">
		                <option value="0">Honors</option>
		                <option value="1">Accelerated</option>
		                <option value="2">Level 2</option>
		              </select>
		            </div>
		            <div class="three wide field">
		              <label>Subject</label>
		              <select class="ui fluid noninit dropdown" ng-model="newclass.subject">
		                <option value="English">English</option>
		                <option value="Mathematics">Mathematics</option>
		                <option value="Science">Science</option>
		                <option value="History">History</option>
		                <option value="World Language">World Language</option>
		                <option value="Elective">Elective</option>
		                <option value="Physical Education">Physical Education</option>
		                <option value="Health">Health</option>
		                <option value="Other">Other</option>
		              </select>
		            </div>
		            <div class="three wide field">
		              <label>Active MPs</label>
		              <select class="ui fluid noninit dropdown" ng-model="newclass.activemps">
		                <option value="1234">All MPs</option>
		                <option value="234">All MPs except MP1</option>
		                <option value="134">All MPs except MP2</option>
		                <option value="124">All MPs except MP3</option>
		                <option value="123">All MPs except MP4</option>
		                <option value="12">MP1 and MP2</option>
		                <option value="34">MP3 and MP4</option>
		                <option value="1">Only MP1</option>
		                <option value="2">Only MP2</option>
		                <option value="3">Only MP3</option>
		                <option value="4">Only MP4</option>
		              </select>
		            </div>
		            <div class="one wide field">
		              <label style="visibility: hidden;">Delete</label>
		              <div class="ui fluid red inverted icon button" ng-click="deleteClass($index)"><i class="trash icon"></i></div>
		            </div>
	      		</div>
	      		<b>Final Average: &nbsp; </b>
	      		<div class="ui teal large buttons">
			  		<div class="ui button" ng-class="{'active': newclass.finalAverage === 10}" ng-click="setFinalAverage($index,10)">A+</div>
			  		<div class="ui button" ng-class="{'active': newclass.finalAverage === 9}" ng-click="setFinalAverage($index,9)">A</div>
			  		<div class="ui button" ng-class="{'active': newclass.finalAverage === 8}" ng-click="setFinalAverage($index,8)">A-</div>
			  		<div class="ui button" ng-class="{'active': newclass.finalAverage === 7}" ng-click="setFinalAverage($index,7)">B+</div>
			  		<div class="ui button" ng-class="{'active': newclass.finalAverage === 6}" ng-click="setFinalAverage($index,6)">B</div>
			  		<div class="ui button" ng-class="{'active': newclass.finalAverage === 5}" ng-click="setFinalAverage($index,5)">B-</div>
			  		<div class="ui button" ng-class="{'active': newclass.finalAverage === 4}" ng-click="setFinalAverage($index,4)">C+</div>
			  		<div class="ui button" ng-class="{'active': newclass.finalAverage === 3}" ng-click="setFinalAverage($index,3)">C</div>
			  		<div class="ui button" ng-class="{'active': newclass.finalAverage === 2}" ng-click="setFinalAverage($index,2)">C-</div>
			  		<div class="ui button" ng-class="{'active': newclass.finalAverage === 1}" ng-click="setFinalAverage($index,1)">D</div>
			  		<div class="ui button" ng-class="{'active': newclass.finalAverage === 0}" ng-click="setFinalAverage($index,0)">F</div>
				</div>
			</div>
		</div>
	</div>
	<br>
	<div class="ui right floated icon labeled large teal button" ng-click="addClasses()"><i class="save icon"></i> Save Changes</div>
